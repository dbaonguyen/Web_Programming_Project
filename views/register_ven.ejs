<%- include('partials/header') %> 
        <!-- header end -->
		<div class="breadcrumb-area pt-205 pb-210" style="background-image: url(img/bg/breadcrumb.jpg)">
            <div class="container">
                <div class="breadcrumb-content text-center">
                    <h2>register</h2>
                    <ul>
                        <li><a href="/">home</a></li>
                        <li> register </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- register-area start -->
        <div class="register-area ptb-100">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12 col-12 col-lg-12 col-xl-6 ml-auto mr-auto">
                        <div class="login-form-container">
                            <div class="login-form">
                                <div class="col-4 role-choice choosen">
                                    <button class="btn btn-primary"><a href="/register">Customer</a></button>
                                </div>
                                <div class="col-4 role-choice">
                                    <button class="btn btn-primary"><a href="/register-ven">Vendor</a></button>
                                </div>
                                <div class="col-4 role-choice">
                                    <button class="btn btn-primary"><a href="/register-ship">Shipper</a></button>
                                </div>
                            </div>
                            
                        </div>
                        <div class="login">
                            <div class="login-form-container">
                                <div class="login-form">
                                    <% if (errorMessages && errorMessages.length > 0) { %>
                                        <div class="error-messages">
                                          <ul>
                                            <% errorMessages.forEach(function(message) { %>
                                              <li class="alert alert-danger"><strong><%= message %></strong></li>
                                            <% }); %>
                                          </ul>
                                        </div>
                                      <% } %>
                                    <form action="/register" method="post">
                                    
                                        <input type="text" name="username" placeholder="Username*" required>
                                        <input type="password" name="password" placeholder="Password*" required>
                                        <input type="text" name="businessName" placeholder="Business Name*" required>
                                        <input type="text" name="businessAddress" placeholder="Business Address*" required>
                                        <p>Choose your avatar*:</p>
                                        <input type="file" id="myFile" name="filename" accept="image/*" required>
                                        <div class="button-box">
                                            <input type="hidden" name="registrationType" value="vendor">
                                            <button type="submit" class="default-btn floatright">Register</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- register-area end -->
    <%- include ('partials/footer') %>