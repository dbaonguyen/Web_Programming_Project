<%- include ('partials/header2') %>
    <div class="breadcrumb-area pt-205 pb-210" style="background-image: url(/img/banner/shipper.jpg)">
        <div class="container">
            <div class="breadcrumb-content text-center">
                <h2>Order Details</h2>
            </div>
        </div>
    </div>
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <a href="/" class="border-shadow">
                    <span class="text-gradient"><i class="ti-angle-double-left"></i> Back</span>
                </a>
            </div>

            <!-- Display product details within the order -->
            <table class="product-table">
                <thead class="thead-dark">
                    <tr>
                        <th>Product Name</th>
                        <th>Image</th>
                        <th>Price</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    <% productOrders.forEach((product)=> { %>
                        <tr>
                            <td>
                                <%= product.name || 'N/A' %>
                            </td>
                            <td>
                                <% if (product.image) { %>
                                    <img src="<%= product.image %>" alt="<%= product.name || 'Product Image' %>">
                                    <% } else { %>
                                        <img src="placeholder_image_url" alt="Product Image">
                                        <% } %>
                            </td>
                            <td>
                                <%= product.price || 'N/A' %>
                            </td>
                            <td>
                                <%= product.quantity || 'N/A' %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </main>
    <%- include ('partials/footer') %>