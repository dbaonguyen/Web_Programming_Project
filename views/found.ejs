<%- include ('partials/header') %>

    <div class="shop-page-wrapper shop-page-padding ptb-100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shop-product-wrapper res-xl">
                        <div class="shop-bar-area">
                            <div class="shop-bar pb-60">
                                <div class="shop-found-selector">
                                    <div class="shop-found">
                                        <p><span>
                                                <%= products.length %>
                                            </span> Product Founded</p>
                                    </div>
                                </div>
                            </div>
                            <div class="shop-product-content tab-content">
                                <div id="grid-sidebar3" class="tab-pane fade active show">
                                    <div class="row">
                                        <% for(let i=0; i< products.length; i++) { %>
                                            <div class="col-md-6 col-xl-4">
                                                <div class="product-wrapper mb-30">
                                                    <div class="product-img">
                                                        <a href="#">
                                                            <img src="/uploads/<%= products[i].image %>" alt=""
                                                                width="370px" height="370px">
                                                        </a>
                                                        <div class="product-action">
                                                            </a>
                                                            <a class="animate-top" title="Add To Cart" href="#"
                                                                onclick="addToCart(event)"
                                                                data-id="<%= products[i]._id %>">
                                                                <i class="pe-7s-cart"></i>
                                                            </a>
                                                            <a class="animate-right" title="Quick View"
                                                                href="/product-details/<%= products[i]._id %>">
                                                                <i class="pe-7s-look"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                    <div class="product-content">
                                                        <h4><a href="#">
                                                                <%= products[i].name %>
                                                            </a></h4>
                                                        <span>$<%= products[i].price %></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <% } %>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include ('partials/footer') %>