<% for(var i = 0; i < products.length; i++) { %>
<tr>
    <td><%= products[i].name %></td>
    <td><%= products[i].description %></td>
    <td><%= products[i].price %></td>
    <td>
        <a href="/update-product?id=<%= products[i]._id %>" class="btn border-shadow update">
            <span class="text-gradient"><i class="ti-pencil"></i></span>
        </a>
        <a class="btn border-shadow delete" data-id="<%= products[i]._id%> ">
            <span class="text-gradient"><i class="ti-close"></i></span>
        </a>       
    </td>
</tr>
<% } %>