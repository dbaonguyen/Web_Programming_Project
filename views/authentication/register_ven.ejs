<%- include('../partials/header') %> 
        <!-- header end -->
		<div class="breadcrumb-area pt-205 pb-210" style="background-image: url(img/banner/Register.png)">
            <div class="container">
                <div class="breadcrumb-content text-center">
                </div>
            </div>
        </div>
        <!-- register-area start -->
        <div class="register-area ptb-100">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12 col-12 col-lg-12 col-xl-6 ml-auto mr-auto">
                        <div class="login-form-container">
                            <div class="register-role">
                                <button><a href="/register">Customer</a></button>
                            </div>
                            <div class="register-role">
                                <button><a href="/register-ven">Vendor</a></button>
                            </div>
                            <div class="register-role">
                                <button><a href="/register-ship">Shipper</a></button>
                            </div>
                        </div>
                        <div class="login">
                            <div class="login-form-container">
                                <div class="login-form">
                                    <% if (errorMessages && errorMessages.length > 0) { %>
                                        <div class="error-messages">
                                          <ul>
                                            <% errorMessages.forEach(function(message) { %>
                                              <li class="alert alert-danger"><strong><%= message %></strong></li>
                                            <% }); %>
                                          </ul>
                                        </div>
                                      <% } %>
                                    <form action="/register" method="post" enctype="multipart/form-data">
                                    
                                        <input type="text" name="username" placeholder="Username*" required>
                                        <input type="password" name="password" placeholder="Password*" required>
                                        <input type="text" name="businessName" placeholder="Business Name*" required>
                                        <input type="text" name="businessAddress" placeholder="Business Address*" required>
                                        <p>Choose your avatar*:</p>
                                        <input type="file" name="pfp" accept="image/*" required>
                                        <div class="button-box">
                                            <input type="hidden" name="registrationType" value="vendor">
                                            <button type="submit" class="default-btn floatright">Register</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- register-area end -->
    <%- include ('../partials/footer') %>