<%- include('partials/header') %>  
        <!-- header end -->
        <main id="site-main">
            <div class="container">
                <div class="box-nav d-flex justify-between">
                    <a href="/vendor" class="border-shadow">
                        <span class="text-gradient"><i class="ti-angle-double-left"></i>All Products</span>
                    </a>
                </div>            
                <!-- form handling -->       
            </div>
        </main>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 col-12 col-lg-6 col-xl-6 ml-auto mr-auto">
                        <div class="login-form-container">
                            <div class="login-form">
                                <h3 class="text-center mb-50">Update Product</h3>
                                <form action="/update-product/<%= product._id %>" method="post" id="add-product" enctype="multipart/form-data">
                                    <div class="col-md-12">
                                        <div class="checkout-form-list">
                                            <label for="name">Product Name <span class="required">*</span></label>									
                                            <input type="text" id="name" name="name" value="<%= product.name%>" placeholder="Please enter the product names"/>
                                        </div>
                                        <div class="checkout-form-list">
                                            <label for="description">Product Description <span class="required">*</span></label>										
                                            <input type="text" id="description" name="description" value="<%= product.description%>" placeholder="Please enter the product description"  />
                                        </div>   
                                        <div class="checkout-form-list">
                                            <label for="price">Price <span class="required">*</span></label>										
                                            <input type="text" id="price" name="price" value="<%= product.price%>" placeholder="Please enter the product price" />
                                        </div>
                                        <div class="checkout-form-list">
                                            <label for="image">Product Image</label>										
                                            <input type="file" id="image" name="image"/>
                                            <img src="/<%= product.image%>" width="100" class="img-thumbnail mt-1">
                                        </div> 
                                        <input type="hidden" name="old_image" value="<%= product.image%>">
                                        <div class="checkout-form-list">
                                            <label for="category">Category <span class="required">*</span></label>		
                                            <select class="form-control" id="category" name="category" value="<%= product.category%>" >
                                                <option value="Dresses">Dresses</option>
                                                <option value="Skirts">Skirts</option>
                                                <option value="Sweaters">Sweaters</option>
                                                <option value="Jeans">Jeans</option>
                                                <option value="Hoodies">Hoodies</option>
                                                <option value="T-shirts">T-shirts</option>
                                                <option value="Jacket">Jacket</option>
                                                <option value="Short">Short</option>
                                                <option value="Shoes">Shoes</option>
                                                <option value="Sun Glasses">Sun Glasses</option>
                                                <option value="Bags">Bags</option>
                                                <option value="Hats and Caps">Hats and Caps</option>
                                            </select>								
                                        </div>      
                                        <div class="add-product-button">
                                                <input type="submit" value="Save Changes" />
                                        </div>			
                                    </div>
                                </form>
                        </div>
                </div>
            </div>
        </div>

        <!-- login-area end -->
<%- include('partials/footer') %>
		