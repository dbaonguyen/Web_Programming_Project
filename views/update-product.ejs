<%- include('partials/header') %>  
        <!-- header end -->
        <main id="site-main">
            <div class="container">
                <div class="box-nav d-flex justify-between">
                    <a href="/vendor" class="border-shadow">
                        <span class="text-gradient"><i class="ti-angle-double-left"></i>All Products</span>
                    </a>
                </div>            
                <!-- form handling -->       
            </div>
        </main>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12 col-12 col-lg-6 col-xl-6 ml-auto mr-auto">
                            <div class="login-form-container">
                                <div class="login-form">
                                    <h3 class="text-center mb-50">Update Product</h3>
                                    <form method="post" id="update-product">
                                        <div class="col-md-12">
                                            <div class="checkout-form-list">
                                                <label for="name">Product Name <span class="required">*</span></label>
                                                <input type="hidden" name="id" value="<%= product._id %>">										
                                                <input type="text" id="name" name="name" value="<%= product.name %>" placeholder="Please enter the product names" />
                                            </div>
                                            <div class="checkout-form-list">
                                                <label for="description">Product Description <span class="required">*</span></label>										
                                                <input type="text" id="description"  name="description" value="<%= product.description %>" placeholder="Please enter the product description" />
                                            </div>   
                                            <div class="checkout-form-list">
                                                <label for="price">Price <span class="required">*</span></label>										
                                                <input type="text" id="price" name="price" value="<%= product.price %>" placeholder="Please enter the product price" />
                                            </div>      
                                            <div class="checkout-form-list">
                                                <label for="category">Category <span class="required">*</span></label>		
                                                <select class="form-control" id="category" name="category" >
                                                    <option value="<%= product.category %>"></option>
                                                    <option>Dresses</option>
                                                    <option>Skirts</option>
                                                    <option>Sweaters</option>
                                                    <option>Jeans</option>
                                                    <option>Hoodies</option>
                                                    <option>T-shirts</option>
                                                    <option>Jacket</option>
                                                    <option>Short</option>
                                                    <option>Shoes</option>
                                                    <option>Sun Glasses</option>
                                                    <option>Bags</option>
                                                    <option>Hats and Caps</option>
                                                </select>								
                                            </div>      
                                            <div class="checkout-form-list">
                                                <label for="category">Size <span class="required">*</span></label>		
                                                <select class="form-control" id="category" name="size">
                                                    <option value="<%= product.category %>"></option>
                                                    <option>XL</option>
                                                    <option>L</option>
                                                    <option>XM</option>
                                                    <option>M</option>
                                                    <option>XS</option>
                                                    <option>S</option>
                                                </select>								
                                            </div>                                                                      
                                            <div class="add-product-button">
                                                    <input type="submit" value="Save Changes" />
                                            </div>			
                                        </div>
                                    </form>
                                </div>
                            </div>
                    </div>
                </div>
            </div>

        <!-- login-area end -->
<%- include('partials/footer') %>
		